<Window x:Class="CurrencyRateApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyRateApplication"
        mc:Ignorable="d"
        Title="Актуальный курс рубля" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="comboBoxCurrency" HorizontalAlignment="Left" Margin="26,54,0,0" VerticalAlignment="Top" Width="469" SelectionChanged="comboBoxCurrency_SelectionChanged"/>
        <Label x:Name="label" Content="Валюта" HorizontalAlignment="Left" Margin="26,23,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelCurrencyRate" Content="Текущий курс" HorizontalAlignment="Left" Margin="26,127,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonRefresh" Content="Обновить курс" HorizontalAlignment="Left" Margin="155,250,0,0" VerticalAlignment="Top" Width="205" Height="40" Click="buttonRefresh_Click"/>
        <TextBox x:Name="textBoxCurrentRate" HorizontalAlignment="Left" Height="23" Margin="26,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="469" IsReadOnly="True"/>

    </Grid>
</Window>
